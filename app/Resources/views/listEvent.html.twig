{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Accueil{% endblock %}
{% block pagetitle %}Accueil{% endblock %}

{% block body %}
    <a href="{{ path('event_createEvent') }}">créer evenement</a>
    {{ form(form) }}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <input id="myInput" type="text" placeholder="Search..">
    <table class="table table-hover">
    <tbody id="myTable">
    <tr>
        <th scope="col">Nom</th>
        <th scope="col">Date de la sortie</th>
        <th scope="col">Date de Cloture</th>
        <th scope="col">Inscrits/Places</th>
        <th scope="col">Etat</th>
        <th scope="col">Inscrit</th>
        <th scope="col">Organisateur</th>
        <th scope="col">Actions</th>
    </tr>
    {% for sortie in sorties %}
        {% set isInscrit = 0 %}
        <tr>
            <td>{{ sortie.nom }}</td>
            <td>{{ sortie.dateDebut|date("m/d/Y h:i") }}</td>
            <td>{{ sortie.dateCloture|date("m/d/Y") }}</td>
            <td>{{ sortie.participants|length }}/{{ sortie.nbInscriptionsMax }}</td>
            <td>#{{ sortie.etat ? sortie.etat.libelle : "pas d'etat" }}</td>
            <td>
                {% for inscrit in sortie.participants %}
                    {% if inscrit.id == app.user.id %}{% set isInscrit = 1 %}X{%  endif %}
                {% else %}
                {% endfor %}
            </td>
            <td>#{{ sortie.organisateur ? sortie.organisateur.username : "pas d'organisateur :(" }}</td>
            <td>{#
                <a href="{{ path('event_detailEvent', {"sortie": sortie.id}) }}">afficher</a>
                {% if app.user.id == sortie.organisateur.id %}
                    <a href="{{ path('event_updateEvent', {"sortie": sortie.id}) }}">Modifier</a>
                    {% if sortie.etat.libelle == "Ouverte" %}
                        <a href="{{ path('event_deleteEvent', {"sortie": sortie.id}) }}">Annuler</a>
                    {% endif %}
                {% else %}
                    {% if isInscrit %}
                        <a href="#">Se désinscrire</a>
                    {% else %}
                        <a href="#">S'inscrire</a>
                    {% endif %}
                {% endif %} #}
            </td>
        </tr>
    {% endfor %}
        </tbody>
        </table>
{% endblock %}