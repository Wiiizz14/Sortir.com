{% extends 'base.html.twig' %}

{% block title %}Gestion Du Site{% endblock %}
{% block pagetitle %}Gestion du site{% endblock %}

{% block body %}
    <p><a href="{{ path('createUser') }}">Ajouter un participant</a></p>
    {%  for participant in listeParticipants %}
    <div>
        <p>{{ participant.username }}</p>
    </div>
    <a href="{{  path('detailUser', {"participant": participant.id}) }}">detail</a>
    <a href="{{  path('updateUser', {"participant": participant.id}) }}">modifier</a>
    <a href="{{ path('deleteUser', {"participant": participant.id}) }}">Supprimer</a>
    {%  else %}
        <p>Aucun participants... :(</p>
    {% endfor %}

{% endblock %}


